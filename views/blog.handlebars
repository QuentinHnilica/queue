<div class="blog-main">
    {{#each blogPosts}}
    <div class="blog-block">
        <img src="{{this.banner}}" alt="{{this.subject}}-img" class="blog-banner" />
        <div class="blog-details">
            <a href="/blogpost/{{this.PostId}}" class="blog-link">
                <h2 class="blog-title">{{this.subject}}</h2>
            </a>
            <p class="blog-author">Author: {{this.username}}</p>
            <p class="blog-date">{{this.date}}</p>
            <div class="blog-snippet">
                {{{this.PostContent}}}
            </div>
            <a href="/blogpost/{{this.PostId}}" class="read-more">Read More</a>
        </div>
        
    </div>
    {{/each}}
</div>

<style>
    /* General Styling for Blog List Page */
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        line-height: 1.6;
        margin: 0;
        padding: 0;
    }

    .blog-main {
        max-width: 1200px;
        margin: 40px auto;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 0 20px;
    }

    .blog-block {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: calc(33.333% - 20px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .blog-block:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .blog-banner {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .blog-details {
        padding: 15px;
    }

    .blog-title {
        font-size: 1.5em;
        color: #333;
        margin: 10px 0;
        transition: color 0.3s ease;
    }

    .blog-link {
        text-decoration: none;
    }

    .blog-link:hover .blog-title {
        color: #007bff;
    }

    .blog-author,
    .blog-date {
        font-size: 0.9em;
        color: #666;
        margin: 5px 0;
    }

    .blog-snippet {
        font-size: 1em;
        color: #444;
        margin-top: 10px;
        overflow: hidden;
        height: 60px;
    }

    .blog-snippet p {
        margin: 0;
    }

    .blog-snippet::after {
        content: "...";
        position: absolute;
        bottom: 0;
        right: 0;
        background: #fff;
    }

    /* Responsive Styling */
    @media (max-width: 992px) {
        .blog-block {
            width: calc(50% - 20px);
        }
    }

    @media (max-width: 600px) {
        .blog-block {
            width: calc(100% - 20px);
        }

        .blog-title {
            font-size: 1.2em;
        }
    }

    .read-more {
    display: inline-block;
    margin-top: 10px;
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
}

.read-more:hover {
    text-decoration: underline;
}
</style>