<style>
    /* Custom dropdown styles */
    #dropdown-trigger {
        padding-right: 30px;
        /* space for the arrow */
        position: relative;
    }

    #dropdown-options {
        display: none;
        /* Hidden by default */
        left: 0;
        /* Aligns the dropdown to the left of the parent */
        right: 0;
        /* Ensures it aligns with the parent container */
        position: absolute;
    }

    #dropdown-options li:hover {
        background-color: #ff6600 !important;
        color: white !important;
    }

    /* Show dropdown on click */
    #dropdown-options.show {
        display: block;
    }
</style>

<script>
    document.getElementById('dropdown-trigger').addEventListener('click', function () {
        const dropdown = document.getElementById('dropdown-options');
        dropdown.classList.toggle('show');
    });

    const options = document.querySelectorAll('#dropdown-options li');
    options.forEach(option => {
        option.addEventListener('click', function () {
            const selectedOption = document.getElementById('selected-option');
            selectedOption.textContent = this.textContent;
            const dropdown = document.getElementById('dropdown-options');
            dropdown.classList.remove('show');
        });
    });

    // Close dropdown if clicked outside
    document.addEventListener('click', function (e) {
        if (!e.target.closest('#dropdown-trigger')) {
            document.getElementById('dropdown-options').classList.remove('show');
        }
    });

</script>

