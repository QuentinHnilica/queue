<section class="bg-gray-50 py-12">
    <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900">Get in Touch</h2>
        <p class="text-gray-600 mt-2">Enter your info, and let's connect!</p>
    </div>

    <div class="container mx-auto pt-10 px-4 sm:px-0">
        <div class="max-w-3xl mx-auto p-6 sm:p-8 rounded-2xl bg-white shadow-lg">
            <form id="contactForm">
                <!-- Name Input -->
                <div class="mb-6">
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                    <input type="text" id="name"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                        placeholder="Enter your name ..." />
                </div>

                <!-- Email Input -->
                <div class="mb-6">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email address</label>
                    <input type="email" id="email" aria-required="true" aria-describedby="emailHelp"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                        placeholder="Enter your email ..." />
                    <div id="emailHelp" class="text-xs text-gray-500 mt-2">
                        We'll never share your email with anyone else.
                    </div>
                </div>

                <!-- Phone Input -->
                <div class="mb-6">
                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
                    <input type="text" id="phone" aria-required="true" aria-describedby="phoneHelp"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                        placeholder="Enter your phone number ..." />
                </div>

                <!-- Message Input -->
                <div class="mb-6">
                    <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                    <textarea id="message" aria-required="true" aria-describedby="messageHelp"
                        class="w-full min-h-fit px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                        rows="4" placeholder="Enter your message ..."></textarea>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-center">
          <button type="submit" id="Sub"
            class="relative inline-block bg-primaryQ text-white text-lg font-semibold px-8 py-4 rounded-lg shadow-lg overflow-hidden group">
            <div
              class="absolute inset-0 bg-black transition-transform duration-500 rounded-lg scale-x-0 group-hover:scale-x-100 origin-left">
            </div>
            <span class="relative z-10 group-hover:text-primaryQLight transition-colors duration-300">
              Submit
            </span>
          </button>
                </div>
            </form>
        </div>
</section>



<script>


    document.getElementById("Sub").addEventListener('click', () => {
        document.getElementById('contact-form').innerHTML = '<h3>Thank you for reaching out, a support agent will be in touch shortly!</h3>'

    })
</script>



<script src="/assets/js/contact.js"></script>