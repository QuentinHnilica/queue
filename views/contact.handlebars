<section class="bg-gray-50 py-12">
    <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900">Get in Touch</h2>
        <p class="text-gray-600 mt-2">Enter your info, and let's connect!</p>
    </div>

    <div class="container mx-auto max-w-lg bg-white rounded-lg shadow-md p-8">
        <form id="contact-form">
            <!-- Name Field -->
            <div class="mb-6">
                <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text" id="name" name="name" placeholder="Your Name"
                    class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-4 py-3">
            </div>

            <!-- Email Field -->
            <div class="mb-6">
                <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input type="email" id="email" name="email" placeholder="you@example.com"
                    class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-4 py-3">
                <p id="email-text" class="text-sm text-gray-500 mt-1">We'll never share your email with anyone else.</p>
            </div>

            <!-- Phone Field -->
            <div class="mb-6">
                <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
                <input type="text" id="phone" name="phone" placeholder="(555) 555-5555"
                    class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-4 py-3">
            </div>

            <!-- Message Field -->
            <div class="mb-6">
                <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                <textarea id="message" name="message" rows="4"
                    placeholder="Please include preferred package if applicable"
                    class="mt-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-4 py-3"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
            <button type="submit" class="relative bg-primaryQ p-6 px-12 rounded-lg shadow-lg overflow-hidden group" id="Sub">
                <!-- Animated Overlay -->
                <div
                    class="absolute inset-0 bg-black transition-transform duration-500 rounded-lg scale-x-0 group-hover:scale-x-100 origin-left">
                </div>
                <!-- Text -->
                <span
                    class="relative z-10 text-black font-bold rounded-lg group-hover:text-primaryQ transition-colors duration-300">
                    Submit
                </span>
            </button>
            </div>
        </form>
    </div>
</section>



<script>


    document.getElementById("Sub").addEventListener('click', () => {
        document.getElementById('contact-form').innerHTML = '<h3>Thank you for reaching out, a support agent will be in touch shortly!</h3>'

    })
</script>



<script src="/assets/js/contact.js"></script>