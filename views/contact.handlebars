<section class="bg-white py-12 text-gray-800">
  <div class="container mx-auto px-6">
    <div class="text-left mb-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Contact Us Today</h2>
      <p class="text-gray-600 mt-2">Enter your info, and let's connect!</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- LEFT: form (IDs preserved) -->
      <div class="lg:col-span-7">
        <div class="rounded-2xl bg-white shadow-lg border border-gray-100">
          <div class="border-b border-gray-100 px-6 py-5">
            <h3 class="text-lg font-semibold text-gray-900">Tell us about your project</h3>
          </div>

          <form id="contact-form" class="px-6 py-6">
            <!-- first / last -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-[11px] tracking-wide font-semibold text-gray-700 uppercase mb-2">
                  First Name <span class="text-primaryQ">*</span>
                </label>
                <input
                  id="name" type="text"
                  class="w-full px-4 py-3 rounded-lg bg-white text-gray-900 placeholder-gray-400 border border-gray-300 focus:ring-2 focus:ring-primaryQ/50 focus:border-primaryQ transition"
                  placeholder="Jane" />
              </div>
              <div>
                <label for="lastName" class="block text-[11px] tracking-wide font-semibold text-gray-700 uppercase mb-2">
                  Last Name <span class="text-primaryQ">*</span>
                </label>
                <input
                  id="lastName" type="text"
                  class="w-full px-4 py-3 rounded-lg bg-white text-gray-900 placeholder-gray-400 border border-gray-300 focus:ring-2 focus:ring-primaryQ/50 focus:border-primaryQ transition"
                  placeholder="Doe" />
              </div>
            </div>

            <!-- email / phone -->
            <div class="mt-5 grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div>
                <label for="email" class="block text-[11px] tracking-wide font-semibold text-gray-700 uppercase mb-2">
                  Email Address <span class="text-primaryQ">*</span>
                </label>
                <input
                  id="email" type="email" aria-required="true" aria-describedby="emailHelp"
                  class="w-full px-4 py-3 rounded-lg bg-white text-gray-900 placeholder-gray-400 border border-gray-300 focus:ring-2 focus:ring-primaryQ/50 focus:border-primaryQ transition"
                  placeholder="you@company.com" />
                <div id="emailHelp" class="text-xs text-gray-500 mt-2">We'll never share your email with anyone else.</div>
              </div>
              <div>
                <label for="phone" class="block text-[11px] tracking-wide font-semibold text-gray-700 uppercase mb-2">
                  Phone Number <span class="text-primaryQ">*</span>
                </label>
                <input
                  id="phone" type="text" aria-required="true" aria-describedby="phoneHelp"
                  class="w-full px-4 py-3 rounded-lg bg-white text-gray-900 placeholder-gray-400 border border-gray-300 focus:ring-2 focus:ring-primaryQ/50 focus:border-primaryQ transition"
                  placeholder="(555) 555-5555" />
                <div id="phoneHelp" class="text-xs text-gray-500 mt-2">Optional â€” helps us reach you faster.</div>
              </div>
            </div>

            <!-- message -->
            <div class="mt-5">
              <label for="message" class="block text-[11px] tracking-wide font-semibold text-gray-700 uppercase mb-2">
                Message <span class="text-primaryQ">*</span>
              </label>
              <textarea
                id="message" rows="4" aria-required="true" aria-describedby="messageHelp"
                class="w-full px-4 py-3 rounded-lg bg-white text-gray-900 placeholder-gray-400 border border-gray-300 focus:ring-2 focus:ring-primaryQ/50 focus:border-primaryQ transition"
                placeholder="How can we help?"></textarea>
              <div id="messageHelp" class="text-xs text-gray-500 mt-2">A sentence or two is perfect.</div>
            </div>

            <!-- submit -->
            <div class="mt-7">
              <button
                type="submit" id="Sub"
                class="relative inline-flex items-center justify-center gap-2 rounded-lg px-8 py-4 font-semibold text-white bg-primaryQ shadow-lg shadow-primaryQ/20 overflow-hidden group focus:outline-none focus:ring-4 focus:ring-primaryQ/30">
                <span class="absolute inset-0 bg-black/10 rounded-lg scale-x-0 group-hover:scale-x-100 origin-left transition-transform duration-500"></span>
                <span class="relative z-10">Submit</span>
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- RIGHT: reference-style mockup card adapted for white background -->
      <div class="lg:col-span-5">
        <div class="relative rounded-2xl border border-gray-200 bg-white p-4 md:p-6 shadow-xl">
          <!-- browser chrome dots -->
          <div class="flex items-center gap-2 mb-4">
            <span class="h-2.5 w-2.5 rounded-full bg-gray-300"></span>
            <span class="h-2.5 w-2.5 rounded-full bg-gray-300"></span>
            <span class="h-2.5 w-2.5 rounded-full bg-gray-300"></span>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-5 gap-6">
            <!-- mini form preview -->
            <div class="lg:col-span-2 rounded-xl border border-gray-200 bg-gray-50 p-4">
              <p class="text-gray-900 font-semibold mb-3">Contact Us</p>
              <div class="space-y-2">
                <div class="h-8 rounded-md bg-gray-200"></div>
                <div class="h-8 rounded-md bg-gray-200"></div>
                <div class="h-8 rounded-md bg-gray-200"></div>
                <div class="h-20 rounded-md bg-gray-200"></div>
                <div class="h-9 rounded-md bg-primaryQ"></div>
              </div>
            </div>

            <!-- dashboard preview -->
            <div class="lg:col-span-3 rounded-xl border border-gray-200 bg-gray-50 p-4">
              <p class="text-gray-900 font-semibold mb-3">Dashboard</p>
              <div class="space-y-2">
                <div class="h-3 rounded bg-gray-200 w-5/6"></div>
                <div class="h-3 rounded bg-gray-200 w-full"></div>
                <div class="h-3 rounded bg-gray-200 w-4/5"></div>
                <div class="h-3 rounded bg-gray-200 w-11/12"></div>
                <div class="h-3 rounded bg-gray-200 w-2/3"></div>
              </div>
              <!-- tiny chart tile -->
              <div class="mt-6 flex justify-end">
                <div class="rounded-lg border border-gray-200 bg-white p-3">
                  <div class="h-16 w-28 bg-gradient-to-b from-primaryQLight/30 to-primaryQDark/10 rounded-md relative overflow-hidden">
                    <svg viewBox="0 0 120 60" class="absolute inset-0">
                      <path d="M0 45 C20 35 30 30 45 34 C60 38 70 25 85 28 C100 31 110 18 120 22"
                            fill="none" stroke="currentColor" stroke-width="2" class="text-primaryQ"/>
                      <circle cx="120" cy="22" r="3" class="text-primaryQ" fill="currentColor" />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- floating badge -->
          <div class="hidden md:block absolute -right-4 top-10">
            <div class="rounded-lg border border-gray-200 bg-white px-4 py-2 shadow-md">
              <div class="flex items-center gap-2">
                <div class="h-8 w-8 rounded-full bg-gray-200"></div>
                <div>
                  <p class="text-sm text-gray-900 leading-tight">Admin User</p>
                  <p class="text-[11px] text-gray-500 leading-tight">Queue Development</p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
      <!-- /RIGHT -->
    </div>
  </div>
</section>



