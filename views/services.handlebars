<script>
    document.addEventListener("DOMContentLoaded", function () {
        const emailft = document.getElementById("emailft");
        const respWeb = document.getElementById("respWeb");
        const seoBtn = document.getElementById("seoBtn");
        const hosting = document.getElementById("hosting");

        function updateAOSAnimation() {
            if (window.innerWidth < 768) {
                emailft.setAttribute("data-aos", "fade-up");
                respWeb.setAttribute("data-aos", "fade-up");
                seoBtn.setAttribute("data-aos", "fade-up");
                hosting.setAttribute("data-aos", "fade-up");
            } else {
                emailft.setAttribute("data-aos", "fade-right");
                respWeb.setAttribute("data-aos", "fade-right");
                seoBtn.setAttribute("data-aos", "fade-left");
                hosting.setAttribute("data-aos", "fade-left");
            }
        }

        // Run the function on load
        updateAOSAnimation();

        // Update on window resize
        window.addEventListener("resize", updateAOSAnimation);
    });
</script>