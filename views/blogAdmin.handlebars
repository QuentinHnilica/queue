<section class="p-6 bg-gray-100">
    <!-- Blog Banner Showcase -->
    <div class="blog-banner-showcase mx-auto text-center hidden">
        <img src="" alt="blog-banner-image" id="imageFilePath" class="max-w-lg mx-auto" />
