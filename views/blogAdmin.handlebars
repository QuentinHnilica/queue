                    </form>
                </div>
            </div>

            <!-- Blog Editor -->
            <div class="col-span-8 bg-white p-6 shadow-md rounded-md">
                <div class="mb-4">
                    <label for="newSubject" class="block text-gray-700 font-semibold">Subject</label>
                    <input type="text" id="newSubject" placeholder="Type Subject Here"
