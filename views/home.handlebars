<script>
  (function(){
    // Scroll progress
    var p=document.getElementById('q-progress');
    function prog(){var s=window.scrollY||document.documentElement.scrollTop||0;var h=document.documentElement.scrollHeight-window.innerHeight;var t=h>0?Math.min(1,s/h):0;p.style.transform='scaleX('+t+')';}
    window.addEventListener('scroll',prog,{passive:true}); prog();

    // Reveal-on-scroll
    try{var els=document.querySelectorAll('.reveal'); if(!('IntersectionObserver' in window)){els.forEach(e=>e.classList.add('is-visible'));}
      else {var io=new IntersectionObserver(es=>{es.forEach(e=>{if(e.isIntersecting){e.target.classList.add('is-visible');io.unobserve(e.target);}})},{threshold:0.12}); els.forEach(el=>io.observe(el));}}
    catch(_){}

    // Counters
    try{var ctr=document.querySelectorAll('#q-counters [data-count]'); if(ctr.length){var started=false; var io2=new IntersectionObserver(es=>{es.forEach(e=>{if(e.isIntersecting&&!started){started=true; ctr.forEach(n=>{var end=+n.getAttribute('data-count'); var cur=0; var step=Math.ceil(end/60); var id=setInterval(()=>{cur+=step; if(cur>=end){cur=end; clearInterval(id);} n.textContent=cur;},18);}); io2.disconnect();}})},{threshold:0.3}); io2.observe(document.getElementById('q-counters'));}}
    catch(_){}

    // Estimator
 try {
    const form = document.getElementById("q-estimate-form");
    if (!form) return;

    const outCost = document.getElementById("q-est-cost");
    const outTime = document.getElementById("q-est-time");

    // Map your values to the internal keys
    const mapFeature = (v) => ({ basic: "static", ecom: "ecom", app: "app" }[v] || "static");
    const mapCopy    = (v) => ({ self: "client", assist: "assist", full: "full" }[v] || "client");

    // Convert selected pages (5,10,20,30) into 5-page blocks
    const toBlocks = (v) => Math.max(1, Math.ceil((parseInt(v || "5", 10)) / 5));

    function calc() {
      const pagesVal = form.pages?.value || "5";
      const features = mapFeature((form.features?.value || "basic").toLowerCase());
      const branding = (form.branding?.value || "provided").toLowerCase();
      const copy     = mapCopy((form.copy?.value || "self").toLowerCase());

      const blocks = toBlocks(pagesVal);

      // Base: $1,000 up to 5 pages; +$500 per additional 5 pages
      let total = 1000 + (blocks - 1) * 500;

      // Features
      if (features === "ecom") total += 1000;
      else if (features === "app") total += 1500;

      // Branding
      if (branding === "light") total += 300 * blocks;
      else if (branding === "full") total += 600 * blocks;

      // Copy
      if (copy === "assist") total += 100 * blocks;
      else if (copy === "full") total += 300 * blocks;

      // Time heuristic
      let weeks = blocks;
      if (features === "ecom") weeks += 1;
      if (features === "app") weeks += 3;
      if (branding === "full") weeks += 1;

      const minW = Math.max(1, weeks);
      const maxW = minW + 1;

      outCost.textContent = "$" + total.toLocaleString();
      outTime.textContent = `${minW}–${maxW} wks`;
    }

    ["change", "input"].forEach((ev) => form.addEventListener(ev, calc));
    calc();
  } catch (_) {}

  })();
  // Blog loader: tries a few JSON endpoints and renders top 3 by date
    try {
      const grid = document.getElementById('q-blog-grid');
      async function fetchAny(urls){
        for (const u of urls){
          try { const r = await fetch(u, {headers:{'accept':'application/json'}}); if(r.ok){ return await r.json(); } } catch(e){}
        }
        return null;
      }
      (async () => {
        // Preferred schema: [{title, url, excerpt, cover, date}] with ISO date
        const data = await fetchAny(['/blog.json','/api/blog','/api/posts','/posts.json','/feed.json']);
        if (!data || !Array.isArray(data) || !grid) return; 
        const posts = data
          .map(p => ({
            title: p.title || p.name || 'Untitled',
            url: p.url || p.permalink || '#',
            excerpt: p.excerpt || p.summary || '',
            cover: p.cover || p.image || '',
            date: p.date || p.published || p.created || ''
          }))
          .sort((a,b)=> new Date(b.date)-new Date(a.date))
          .slice(0,3);
        if (!posts.length) return;
        grid.innerHTML = posts.map(p => `
          <article class="rounded-2xl border border-gray-200 bg-white p-4 shadow-sm transition hover:-translate-y-1">
            ${p.cover ? `<img src="${p.cover}" alt="" class="h-40 w-full rounded-xl object-cover">` : '<div class="h-40 w-full rounded-xl bg-gradient-to-br from-gray-200 to-gray-100"></div>'}
            <h3 class="mt-4 text-lg font-semibold">${p.title}</h3>
            ${p.date ? `<time class="text-xs text-gray-500">${new Date(p.date).toLocaleDateString()}</time>` : ''}
            ${p.excerpt ? `<p class="mt-2 text-sm text-gray-600">${p.excerpt}</p>` : ''}
            <a href="${p.url}" class="mt-3 inline-flex items-center gap-2 font-semibold text-primaryQ">Read more<span aria-hidden>→</span></a>
          </article>
        `).join('');
      })();
    } catch(_){}

</script>
