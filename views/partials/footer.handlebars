<script>
// Sticky chat + exit/dismiss
try{
  var trig=document.getElementById('q-chat-trigger'),
      pan =document.getElementById('q-chat-panel'),
      x   =document.getElementById('q-chat-close'),
      hide=document.getElementById('q-chat-hide');

  // create the exit button if it's not in the HTML
  if(!hide){
    hide=document.createElement('button');
    hide.id='q-chat-hide';
    hide.type='button';
    hide.setAttribute('aria-label','Hide help button (dismiss)');
    hide.className='fixed bottom-24 right-5 z-50 rounded-full bg-gray-200/90 p-2 text-gray-700 shadow hover:bg-gray-300 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-[#df8327]/30';
    hide.textContent='✕';
    document.body.appendChild(hide);
  }

  var KEY='qChatDismissedAt', DAY=864e5; // 24h
  function open(){ pan&&pan.classList.remove('hidden'); trig&&trig.setAttribute('aria-expanded','true'); }
  function close(){ pan&&pan.classList.add('hidden');  trig&&trig.setAttribute('aria-expanded','false'); }
  function hideAll(){
    close();
    trig&&trig.classList.add('hidden');
    hide&&hide.classList.add('hidden');
    localStorage.setItem(KEY, String(Date.now()));
  }

  // honor previous dismissal
  var last=+localStorage.getItem(KEY)||0;
  if(Date.now()-last < DAY){ hideAll(); }

  // toggle panel
  trig&&trig.addEventListener('click', function(){
    if(!pan) return;
    pan.classList.toggle('hidden');
    trig.setAttribute('aria-expanded', String(!pan.classList.contains('hidden')));
    if(!pan.classList.contains('hidden')){
      var first=pan.querySelector('a,button,input,textarea,select');
      first&&first.focus();
    }
  });

  // close panel from inside
  x&&x.addEventListener('click', close);

  // dismiss everything
  hide&&hide.addEventListener('click', hideAll);

  // esc closes
  document.addEventListener('keydown', function(e){ if(e.key==='Escape') close(); });

  // click outside closes
  document.addEventListener('click', function(e){
    if(!pan || pan.classList.contains('hidden')) return;
    var insidePanel = pan.contains(e.target);
    var onTrigger   = trig && trig.contains(e.target);
    var onHide      = hide && hide.contains(e.target);
    if(!insidePanel && !onTrigger && !onHide) close();
  }, {capture:true});
}catch(_){}
</script>

