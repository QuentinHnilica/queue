<div data-theme="queueAdminPanel">
  <div
    class="h-screen flex items-center justify-center bg-gradient-to-r from-base-100 to-primary/20"
  >
    <form
      id="createUserForm"
      class="px-12 py-6 m-8 border border border-gray-300 rounded-lg shadow-md bg-white w-[28rem]"
    >
      <!-- Form Header -->
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">
          Create User
        </h1>
      </div>

      <!-- Username Field -->
      <div class="mb-4">
        <label for="user-id" class="block text-sm font-medium text-gray-700">
          Username
        </label>
        <input
          id="user-id"
          type="text"
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-gray-900 px-3 py-2"
        />
      </div>

      <!-- Email Address Field -->
      <div class="mb-4">
        <label
          for="email-signup"
          class="block text-sm font-medium text-gray-700"
        >
          Email Address
        </label>
        <input
          id="email-signup"
          type="email"
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-gray-900 px-3 py-2"
        />
        <p id="emailHelp" class="mt-1 text-sm text-gray-500">
          We'll never share your email with anyone else.
        </p>
      </div>

      <!-- Password Field -->
      <div class="mb-6">
        <label
          for="password-input"
          class="block text-sm font-medium text-gray-700"
        >
          Password
        </label>
        <input
          id="password-input"
          type="password"
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-gray-900 px-3 py-2"
        />
      </div>

      <!-- Success Message -->
      <div
        id="successMessage"
        class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-green-500 text-white text-sm px-4 py-2 rounded shadow-lg hidden"
      >
        User successfully created!
      </div>

      <!-- Create Button -->
      <div class="text-center">
        <button
          type="button"
          id="createUserBtn"
          class="btn btn-sm lg:btn-md px-4 py-2 btn-primary hover:bg-accent hover:text-base-100 transition-color duration-0 ease-in-out hover:border-neutral"
        >
          Create User
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/assets/js/signup.js"></script>