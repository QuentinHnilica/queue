<!-- Login Form -->
<div class="h-[75vh] flex items-center justify-center bg-gray-100">
  <form class="bg-white p-6 rounded-lg shadow-md w-full max-w-sm">
    <!-- Header -->
    <div class="text-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Log In</h1>
    </div>

    <!-- Username Input -->
    <div class="mb-4">
      <label
        for="user-id"
        class="block text-sm font-medium text-gray-700"
      >Username</label>
      <input
        type="text"
        id="user-id"
        class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
        placeholder="Enter your username"
      />
    </div>

    <!-- Password Input -->
    <div class="mb-6">
      <label
        for="password-input"
        class="block text-sm font-medium text-gray-700"
      >Password</label>
      <input
        type="password"
        id="password-input"
        class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
        placeholder="Enter your password"
      />
    </div>

    <!-- Submit Button -->
    <div>
      <button
  
        class="w-full px-4 py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
        id="login_form"
        onclick="loginFormHandler()"
      >
        Log In
      </button>
    </div>
  </form>
</div>

<script src="/assets/js/login.js"></script>