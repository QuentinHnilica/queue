
<div class="flex full-height">
    <!-- Sidebar with Dropdown Filter -->
    <div class="w-1/4 p-4 bg-white shadow-lg">
        <h2 class="text-xl font-bold mb-4">Filter by Form</h2>
        <form method="GET" action="/admin/leads">
            <select name="formName" onchange="this.form.submit()" class="w-full p-2 border rounded">
                <option value="">All Forms</option>
                {{#each formNames}}
                <option value="{{formName}}" {{#ifEquals formName ../formName}}selected{{/ifEquals}}>{{formName}}</option>
                {{/each}}
            </select>
        </form>
    </div>

    <!-- Lead List -->
    <div class="w-3/4 space-y-4">
        {{#each myLeads}}
        <div class="p-4 bg-white shadow-lg flex justify-between">
            <div>
                <h3 class="font-bold">{{formName}}</h3>
                {{#each formData}}
                    <p><strong>{{@key}}:</strong> {{this}}</p>
                {{/each}}
            </div>
            <div class="text-right">
                <a href="#" class="text-blue-500">View Lead</a>
                <form action="/admin/leads/delete/{{id}}" method="POST">
                    <button type="submit" class="text-red-500 mt-2">Delete Lead</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<style>
    .full-height{
        height: 100%;
    }
</style>