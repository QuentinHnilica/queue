<section>
    <div class="contact-text">
        Enter your info, lets get in touch!
    </div>
    <div class="container">
        <div class="row align-items-start">

            <div class="col-2"></div>
            <div class="col-8 myFourm">
                <div class="mb-3">
                    <p>Name *</p>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="input-box" placeholder="Name:" aria-label="Recipient's username" aria-describedby="button-addon2" id="name">
                </div>

                <div class="mb-3">
                    <p>Email *</p>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="input-box" placeholder="Email:" aria-label="Recipient's username" aria-describedby="button-addon2" id="email">
                </div>

                
                <div class="mb-3">
                    <p>Phone *</p>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="input-box" placeholder="Phone:" aria-label="Recipient's username" aria-describedby="button-addon2" id="phone">
                </div>

                <div class="mb-3">
                    <p>Message *</p>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="message-box" placeholder="Message:" aria-label="Recipient's username" aria-describedby="button-addon2" id="message">
                </div>

                <div class="input-group mb-3">
                    <button type="submit" class="btn sub-button mb-3" id="Sub">Submit</button>
                </div>

            </div>
        </div>
    </div>
</section>


<script>
    document.getElementById('contact').classList.add('active')
</script>

